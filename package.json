{
	"name": "supasveltekit",
	"description": "ğŸŒŸ Where Svelte's elegance meets Supabase's might! ğŸŒŸ",
	"license": "MIT",
	"version": "0.1.5",
	"engines": {
		"node": ">=18.18.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"supabase": "supabase",
		"env:local": "echo \"$(supabase status -o env --override-name auth.anon_key=PUBLIC_SUPABASE_KEY --override-name api.url=PUBLIC_SUPABASE_URL)\nNODE_ENV=\\\"development\\\"\nPUBLIC_TEST_USER_EMAIL=\\\"test@test.io\\\"\nPUBLIC_TEST_USER_PASSWORD=\\\"test1234\\\"\" > .env",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@supabase/supabase-js": "^2.33.1",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.46.0",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.20",
		"@sveltejs/package": "^2.3.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@typescript-eslint/eslint-plugin": "^8.0.1",
		"@typescript-eslint/parser": "^8.0.1",
		"dotenv": "^16.4.5",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.2.9",
		"supabase": "^1.187.10",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.5",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4",
		"vite": "^5.3.5",
		"vitest": "^2.0.5"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@supabase/supabase-js": "^2.45.1"
	}
}
